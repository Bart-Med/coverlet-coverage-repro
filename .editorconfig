# http://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj,nativeproj,locproj}]
indent_size = 2

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct,stylecop,xml}]
indent_size = 2

# Xml build files
[*.builds]
indent_size = 2

# Build scripts
[*.{yml,yaml}]
indent_size = 2

[*.ps1]
end_of_line = crlf
indent_style = tab

[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

# C# files
[*.cs]
end_of_line = crlf
